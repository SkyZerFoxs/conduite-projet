CC=gcc

CFLAGS=-W -Wall -Iinclude

SRCDIR=src
INCLUDEDIR=include
OBJDIR=obj
TESTDIR=test

all: test_sprite

test_sprite: $(TESTDIR)/test_sprite.c  $(SRCDIR)/sprite.c $(SRCDIR)/map.c
	${CC} $(TESTDIR)/test_sprite.c $(SRCDIR)/sprite.c $(SRCDIR)/map.c -o test_sprite $(CFLAGS)
	
mrproper:
	rm -f test_sprite

