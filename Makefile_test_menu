CC=gcc

CFLAGS=-W -Wall -Iinclude 
LDFLAGS= $(shell ./bin/sdl2-config --libs) -lSDL2 -lSDL2_image -lSDL2_ttf
SRCDIR=src
INCLUDEDIR=include
OBJDIR=obj
TESTDIR=test

all: test_main

test_menu: $(SRCDIR)/menu.c
	${CC} $(SRCDIR)/menu.c -o test_menu $(CFLAGS) $(LDFLAGS)


test_main: $(SRCDIR)/menu.c $(TESTDIR)/main.c
	${CC} $(SRCDIR)/menu.c $(TESTDIR)/main.c -o test_main $(CFLAGS) $(LDFLAGS)

mrproper:
	rm -f test_menu
